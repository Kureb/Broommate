<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="500px"
        android:layout_height="500px"
        android:id="@+id/qrCode"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keyShare"
        android:layout_alignLeft="@+id/buttonCancelShare"
        android:layout_alignStart="@+id/buttonCancelShare"
        android:layout_alignRight="@+id/buttonShareShare"
        android:layout_alignEnd="@+id/buttonShareShare"
        android:layout_below="@+id/qrCode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/buttonCancelShare"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/qrCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy"
        android:id="@+id/buttonShareShare"
        android:layout_alignTop="@+id/buttonCancelShare"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />

</RelativeLayout>